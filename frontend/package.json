{
  "name": "code-improver",
  "displayName": "Code Improver",
  "version": "1.0.0",
  "description": "AI-powered code improvement suggestions",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code-improver.analyzeFile",
        "title": "Analyze Current File"
      },
      {
        "command": "code-improver.analyzeProject",
        "title": "Analyze Project"
      },
      {
        "command": "code-improver.openSettings",
        "title": "Open Settings"
      }
    ],
    "configuration": {
      "title": "Code Improver",
      "properties": {
        "codeImprover.backendUrl": {
          "type": "string",
          "default": "http://localhost:3000",
          "description": "Backend API URL"
        },
        "codeImprover.apiKey": {
          "type": "string",
          "description": "Your API Key for Code Improver"
        },
        "codeImprover.autoAnalyze": {
          "type": "boolean",
          "default": false,
          "description": "Automatically analyze files on save"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run build:css",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build:css": "tailwindcss -i ./webview/styles/tailwind.css -o ./out/webview/styles.css",
    "watch:css": "tailwindcss -i ./webview/styles/tailwind.css -o ./out/webview/styles.css --watch"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4",
    "tailwindcss": "^3.3.0",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.24"
  },
  "dependencies": {
    "axios": "^1.5.0"
  }
}