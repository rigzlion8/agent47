{
  "name": "code-improver",
  "displayName": "Code Improver",
  "version": "1.0.0",
  "description": "AI-powered code improvement suggestions",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code-improver.analyzeFile",
        "title": "Analyze Current File"
      },
      {
        "command": "code-improver.analyzeProject",
        "title": "Analyze Project"
      },
      {
        "command": "code-improver.openSettings",
        "title": "Open Settings"
      },
      {
        "command": "code-improver.openChat",
        "title": "Open AI Assistant"
      },
      {
        "command": "code-improver.explainCode",
        "title": "Explain Selected Code"
      },
      {
        "command": "code-improver.improveCode",
        "title": "Improve Selected Code"
      },
      {
        "command": "code-improver.analyzeCode",
        "title": "Analyze Selected Code"
      },
      {
        "command": "code-improver.readCode",
        "title": "Read Current File"
      },
      {
        "command": "code-improver.editCode",
        "title": "Edit Selected Code"
      },
      {
        "command": "code-improver.reviewCode",
        "title": "Review Selected Code"
      }
    ],
    "configuration": {
      "title": "Code Improver",
      "properties": {
        "codeImprover.backendUrl": {
          "type": "string",
          "default": "https://api.deepseek.com/v1",
          "description": "Backend API URL"
        },
        "codeImprover.apiKey": {
          "type": "string",
          "description": "Your API Key for Code Improver"
        },
        "codeImprover.model": {
          "type": "string",
          "default": "deepseek-chat",
          "description": "AI model to use for code analysis"
        },
        "codeImprover.autoAnalyze": {
          "type": "boolean",
          "default": false,
          "description": "Automatically analyze files on save"
        }
      }
    },
    "menus": {
      "command-palette": [
        {
          "command": "code-improver.openChat",
          "when": "true"
        },
        {
          "command": "code-improver.explainCode",
          "when": "editorHasSelection"
        },
        {
          "command": "code-improver.improveCode",
          "when": "editorHasSelection"
        },
        {
          "command": "code-improver.analyzeCode",
          "when": "editorHasSelection"
        },
        {
          "command": "code-improver.readCode",
          "when": "true"
        },
        {
          "command": "code-improver.editCode",
          "when": "editorHasSelection"
        },
        {
          "command": "code-improver.reviewCode",
          "when": "editorHasSelection"
        }
      ],
      "editor/context": [
        {
          "command": "code-improver.explainCode",
          "group": "code-improver",
          "when": "editorHasSelection"
        },
        {
          "command": "code-improver.improveCode",
          "group": "code-improver",
          "when": "editorHasSelection"
        },
        {
          "command": "code-improver.analyzeCode",
          "group": "code-improver",
          "when": "editorHasSelection"
        },
        {
          "command": "code-improver.editCode",
          "group": "code-improver",
          "when": "editorHasSelection"
        },
        {
          "command": "code-improver.reviewCode",
          "group": "code-improver",
          "when": "editorHasSelection"
        },
        {
          "command": "code-improver.readCode",
          "group": "code-improver",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "code-improver",
          "title": "Code Improver",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "views": {
      "code-improver": [
        {
          "id": "code-improver-chat",
          "name": "AI Assistant",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run build:css",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build:css": "tailwindcss -i ./webview/styles/tailwind.css -o ./out/webview/styles.css",
    "watch:css": "tailwindcss -i ./webview/styles/tailwind.css -o ./out/webview/styles.css --watch"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4",
    "tailwindcss": "^3.3.0",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.24"
  },
  "dependencies": {
    "axios": "^0.27.2"
  }
}